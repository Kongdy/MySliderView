<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.kongdy.mysliderview.MainActivity">

    <com.project.kongdy.mysliderview.view.NodeSlider
        android:id="@+id/ns_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        app:ns_show_slider_label="true"
        app:ns_node_count="4"
        app:ns_in_reach_color="@color/colorPrimary"
        app:ns_sliderBlock="@mipmap/xiang_img_huadong"
        app:ns_inNoReachColor="@color/text_gray_color"
        app:ns_out_color="@color/d7d7d7_gray_color"
        app:ns_sliderLabelColor="@color/text_black"
        app:ns_sliderLabelTextSize="15sp"/>

    <com.project.kongdy.mysliderview.view.MySliderView
        android:id="@+id/exercise_set_slider"
        android:layout_below="@id/ns_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:slider_cursor="@mipmap/yun_icon_hua"/>
</RelativeLayout>
